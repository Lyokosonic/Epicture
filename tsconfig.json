{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "ES2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "module": "es6",
    "target": "esnext",
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "Epicture/jest.config.js"
  ]
}